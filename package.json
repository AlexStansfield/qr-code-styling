{
  "name": "@liquid-js/qr-code-styling",
  "version": "2.1.0",
  "description": "Add a style and an image to your QR code",
  "type": "module",
  "main": "./lib/qr-code-styling-node.js",
  "browser": "./lib/qr-code-styling.js",
  "types": "./lib/index.d.ts",
  "exports": {
    "./package.json": {
      "default": "./package.json"
    },
    ".": {
      "node": "./lib/qr-code-styling-node.js",
      "types": "./lib/index.d.ts",
      "default": "./lib/qr-code-styling.js"
    }
  },
  "files": [
    "lib"
  ],
  "dependencies": {
    "@xmldom/xmldom": "^0.8.10",
    "file-type": "^19.0.0",
    "qrcode-generator": "^1.4.4",
    "sharp": ">0.32.1 <1.0.0",
    "tslib": "^2.6.2",
    "typedoc": "^0.25.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/jsdom": "^21.1.6",
    "@types/node": "<21.0.0",
    "@types/node-fetch": "^2.6.11",
    "@types/sharp": "^0.31.1",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "canvas": "^2.11.2",
    "eslint": "<9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.2.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "npm-check-updates": "^16.14.18",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "rollup": "^4.16.4",
    "rollup-plugin-typescript2": "^0.36.0",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.10"
  },
  "scripts": {
    "build": "rimraf lib && rollup -c rollup.config.ts --configPlugin rollup-plugin-typescript2",
    "test": "jest",
    "start": "vite src",
    "lint": "prettier -w . && eslint . --fix",
    "prepublishOnly": "npm run build",
    "prepare": "husky",
    "release": "git diff --exit-code && standard-version && git push --follow-tags origin",
    "docs": "typedoc ./src/index.ts ./src/tools/browserUtils.ts ./src/tools/browserImageTools.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Liquid-JS/qr-code-styling.git"
  },
  "keywords": [
    "qr",
    "qrcode",
    "qr-code",
    "js",
    "qrjs",
    "qrstyling",
    "styling",
    "qrbranding",
    "branding",
    "qrimage",
    "image",
    "qrlogo",
    "logo",
    "design"
  ],
  "author": "Denys Kozak <kozak.denys.dev@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Liquid-JS/qr-code-styling/issues"
  },
  "homepage": "https://qr-code-styling.com",
  "packageManager": "yarn@4.1.1"
}
