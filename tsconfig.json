{
    "compilerOptions": {
        "outDir": "./lib/",
        "sourceMap": true,
        "module": "esnext",
        "target": "es2020",
        "allowJs": true,
        "moduleResolution": "node",
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "lib": [
            "ES2020",
            "DOM"
        ]
    },
    "files": [
        "./src/index.ts",
        "./src/node.ts"
    ],
    "exclude": [
        "**/*.test.js",
        "**/*.test.ts"
    ]
}